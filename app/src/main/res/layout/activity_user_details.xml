<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jack.ayd2.UserDetails">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="1"
            android:layout_width="50dp"
            android:layout_height="50sp"
            android:textSize="36sp"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/textView_id"
            />
        <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:id="@+id/textView_email"
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:layout_column="1"
            android:textSize="24sp" />


        <TextView
            android:text="Nombre    "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary" />
        <TextView
            android:text="Nombre1 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_name"
            android:layout_row="1"
            android:layout_column="2" />

        <TextView
            android:text="Apellido "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:text="Apellido "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_last_name"
            android:layout_row="2"
            android:layout_column="2" />

        <TextView
            android:text="Creado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:text="Apellido "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_created_at"
            android:layout_row="3"
            android:layout_column="2" />

        <TextView
            android:text="Actualizado "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:text="Apellido "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_updated_at"
            android:layout_row="4"
            android:layout_column="2" />

        <TextView
            android:text="Eliminado"
            android:layout_columnSpan="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:text="Apellido "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_deleted_at"
            android:layout_row="5"
            android:layout_column="2" />

    </GridLayout>
</RelativeLayout>
